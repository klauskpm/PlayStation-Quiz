<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="QuizButton">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:textColor">@android:color/white</item>
    </style>

    <style name="QuestionBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="QuestionText">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="QuestionText.BottomSpace">
        <item name="android:layout_marginBottom">6dp</item>
    </style>

    <style name="QuestionDivider">
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginBottom">16dp</item>
    </style>

    <style name="Answer">
        <item name="android:layout_marginTop">6dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="Answer.Spaces">
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>

    <style name="Answer.RadioGroup">
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="Answer.RadioButton" parent="Answer.Spaces">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="Answer.EditText">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:ems">10</item>
        <item name="android:layout_alignParentStart">true</item>
    </style>

    <style name="Answer.EditText.Number">
        <item name="android:inputType">number</item>
    </style>

    <style name="Answer.CheckBox" parent="Answer.Spaces"></style>

</resources>
